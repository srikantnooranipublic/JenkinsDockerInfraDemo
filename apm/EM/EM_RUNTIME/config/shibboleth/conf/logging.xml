<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!--
        Loggers define indicate which packages/categories are logged, at which level, and to which appender.
        Levels: OFF, ERROR, WARN, INFO, DEBUG, TRACE, ALL
    -->
    <logger name="com.ca.apm.em.idp" level="ALL"/>
    <logger name="com.ca.apm.axa" level="ALL"/>
    
    <!-- Logs IdP, but not OpenSAML, messages -->
    <logger name="edu.internet2.middleware.shibboleth" level="DEBUG"/>

    <!-- Logs OpenSAML, but not IdP, messages -->
    <logger name="org.opensaml" level="DEBUG"/>
    <logger name="org.opensaml.xml" level="DEBUG"/>
	<logger name="org.opensaml.saml2.metadata" level="DEBUG"/>
	<logger name="org.hibernate" level="OFF"/> 
    <!-- Logs LDAP related messages -->
    <logger name="edu.vt.middleware.ldap" level="DEBUG"/>
    
    <!-- Logs inbound and outbound protocols messages at DEBUG level -->
    <logger name="PROTOCOL_MESSAGE" level="DEBUG" />
    
    <!-- 
        Normally you should not edit below this point.  These default configurations are sufficient for 
        almost every system.
    -->

    <!-- 
        Logging appenders define where and how logging messages are logged.
     -->
    <appender name="IDP_ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/shibboleth/idp-access.log</File>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/shibboleth/idp-access-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <Pattern>%msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="IDP_AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/shibboleth/idp-audit.log</File>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/shibboleth/idp-audit-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <Pattern>%msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="IDP_PROCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logs/shibboleth/idp-process.log</File>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/shibboleth/idp-process-%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <Pattern>%date{HH:mm:ss.SSS} - %level [%logger:%line] - %msg%n</Pattern>
        </encoder>
    </appender>
  
    <logger name="Shibboleth-Access" level="ALL">
        <appender-ref ref="IDP_ACCESS"/>
    </logger>
    
    <logger name="Shibboleth-Audit" level="ALL">
        <appender-ref ref="IDP_AUDIT"/>
    </logger>
        
    <logger name="org.springframework" level="OFF"/>
    
    <logger name="org.apache.catalina" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="IDP_PROCESS"/>
    </root>

</configuration>
